#!/bin/bash

# Turns on second screen (Linux/X11 only)
resolve_display() {
	if ! is_linux; then
		echo "resolve_display: only available on Linux (X11)"
		return 1
	fi

	echo "Turning on the screen"
	xrandr --output HDMI-2 --auto

	if [ "$1" = "right" ]
	then
		echo "Setting the screen on the right of the computer"
		xrandr --output HDMI-2 --right-of eDP-1
	else
		echo "Setting the screen on the left of the computer"
		xrandr --output HDMI-2 --left-of eDP-1
	fi

	return
}

# Creates a dir and cd into it
mkcd() {
    mkdir -p "$1" && cd "$1"
}

# Removes exited containers
drm() {
    docker rm $(docker ps -a -f status=exited -q)
}

# Removes dangling images
drmi() {
    docker rmi $(docker images --filter "dangling=true" -q)
}

# Searches for a specific term in a js project
searchjs() {
    grep -r --include=*.js --exclude-dir={"vendor|.git|.github|node_modules|containers"} "$1" app/
}

# Asks the user to confirm an action
confirm() {
    read -p "Are you sure to: $1 [y/N]? " -n 1 -r
    echo    # move to a new line
    if [[ $REPLY =~ ^[Yy]$ ]]; then
        return 1;
    fi

    return 0;
}

# Swaps .env files
swap_dot_env() {
    if [[ -f .env.prod ]]; then
        confirm "swap from dev to prod"
        if [ $? -eq 1 ]; then
            mv .env .env.dev
            mv .env.prod .env
        fi
    elif [[ -f .env.dev ]]; then
        confirm "swap from prod to dev"
        if [ $? -eq 1 ]; then
            mv .env .env.prod
            mv .env.dev .env
        fi
    fi
}

# Kills process using specific port
# usage: $ kill_process_using 3001
kill_process_using() {
    # sends TERM
    kill -15 $(lsof -nP -iTCP -sTCP:LISTEN | grep $1 | awk '{print $2}')
}

# Create a new worktree and branch from within current git directory
gwa() {
    if [[ -z "$1" ]]; then
        echo "Usage: gwa [branch name]"
        return 1
    fi

    local branch="$1"
    local base="$(basename "$PWD")"
    local worktree_path="../${base}--${branch}"

    git worktree add -b "$branch" "$worktree_path"
    command -v mise &>/dev/null && mise trust "$worktree_path"
    cd "$worktree_path"
}

# Remove worktree and branch from within active worktree directory
gwd() {
    if ! command -v gum &>/dev/null; then
        echo "gwd requires 'gum'. Install: https://github.com/charmbracelet/gum"
        return 1
    fi

    if gum confirm "Remove worktree and branch?"; then
        local cwd worktree branch root

        cwd="$(pwd)"
        worktree="$(basename "$cwd")"

        # split on first `--`
        root="${worktree%%--*}"
        branch="${worktree#*--}"

        # Protect against accidentally nuking a non-worktree directory
        if [[ "$root" != "$worktree" ]]; then
            cd "../$root"
            git worktree remove "$worktree" --force
            git branch -D "$branch"
        fi
    fi
}
